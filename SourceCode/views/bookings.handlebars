<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="overview-wrap">
                        <h2 class="title-1 p-2">Bookings</h2>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-title">
                                <h3 class="text-center title-2">Train bookings</h3>
                            </div>
                            <hr>
                            <div style="display: none;" class="alert alert-danger alert-dismissible fade show tMessage"
                                role="alert">
                                <p class="tMessageText"></p>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            {{> messages}}
                            <form action="/admin/dashboard/bookings" method="POST">
                                <div class="row">
                                    <div class="col-6">
                                        <label for="bTrain" class="form-control-label">Train:</label>
                                        <div class="form-group">
                                            <select name="bTrain" id="bTrain" class="form-control" required>
                                            {{#each data.trainArray}}
                                                <option value="{{id}}">{{trainName}}</option>
                                            {{/each}}
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <label for="bRoute" class="form-control-label">Route:</label>
                                        <div class="form-group">
                                            <select name="bRoute" id="bRoute" class="form-control" required>
                                            {{#each data.routeArray}}
                                                <option value="{{id}}">{{routeName}}</option>
                                            {{/each}}
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <label for="bSchedule" class="form-control-label">Schedule:</label>
                                        <div class="form-group">
                                            <select name="bSchedule" id="bSchedule" class="form-control" required>
                                            {{#each data.scheduleArray}}
                                                <option value="{{id}}">{{scheduleName}}</option>
                                            {{/each}}
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="bDate">Booking Date</label>
                                            <input id="bDate" name="bDate" type="date" placeholder="Date"
                                                class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <button id="payment-button" type="submit"
                                        class="btn btn-lg btn-info btn-block">QUERY</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="overview-wrap">
                        <h2 class="title-1">Bookings List</h2>
                    </div>
                </div>
                {{#if data.showPdf}}
                <div class="col-md-3">
                    <a href="/admin/dashboard/bookings/pdf" target="_blank" class="float-right"><button class="btn btn-outline-success"><strong>PDF </strong><i class="fa fa-download"></i></button></a>
                </div>
                {{/if}}
                <br><br>
                <div class="col-md-12">
                    <!-- DATA TABLE-->
                    <div class="table-responsive m-b-40">
                        <table class="table table-borderless table-data3">
                            <thead>
                                <tr>
                                    <th>S No.</th>
                                    <th>Date (YYYY-MM-DD)</th>
                                    <th>Booked AC Seats</th>
                                    <th>Available AC Seats</th>
                                    <th>Booked General Seats</th>
                                    <th>Available General Seats</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each data.bookingsArray}}
                                <tr>
                                    <td>{{index}}</td>
                                    <td>{{bookingDate}}</td>
                                    <td>{{bAcSeats}}</td>
                                    <td>{{aAcSeats}}</td>
                                    <td>{{bGeneralSeats}}</td>
                                    <td>{{aGeneralSeats}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    <!-- END DATA TABLE-->
                </div>
                {{>footer}}
            </div>
        </div>
    </div>