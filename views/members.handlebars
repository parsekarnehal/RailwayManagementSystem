<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="overview-wrap">
                        <h2 class="title-1 p-2">Members</h2>
                    </div>
                </div>
                <div class="col-md-12">
                    {{#if data.updateMember.status}}
                    <div class="card">
                        <div class="card-body">
                            <div class="card-title">
                                <h3 class="text-center title-2">Update the Member</h3>
                            </div>
                            <hr>
                            {{> messages}}
                            <form action="/dashboard/members/update" method="POST">
                                <div class="form-group">
                                    <input class="au-input au-input--full" type="text" value="{{data.updateMember.id}}"
                                        name="userId" placeholder="Id" hidden required>
                                </div>
                                <div class="form-group">
                                    <label>Name</label>
                                    <input class="au-input au-input--full" type="text"
                                        value="{{data.updateMember.userName}}" name="name" placeholder="Name" required>
                                </div>
                                <div class="form-group">
                                    <label>Address</label>
                                    <input class="au-input au-input--full" type="text"
                                        value="{{data.updateMember.userAddress}}" name="address" placeholder="Address"
                                        required>
                                </div>
                                <div class="form-group">
                                    <label>Birth Year</label>
                                    <input class="au-input au-input--full" type="number"
                                        value="{{data.updateMember.userYear}}" name="year" placeholder="Birth Year"
                                        required>
                                </div>
                                <div class="form-group">
                                    <label>Contact</label>
                                    <input class="au-input au-input--full" type="number" name="contact"
                                        placeholder="Contact Number" value="{{data.updateMember.userContact}}" required>
                                </div>
                                <div class="form-group">
                                    <label>Email as Username</label>
                                    <input class="au-input au-input--full" type="email" name="email"
                                        value="{{data.updateMember.userEmail}}" placeholder="Email" disabled required>
                                </div>
                                <button id="payment-button" type="submit"
                                    class="btn btn-lg btn-info btn-block">UPDATE</button>
                            </form>
                        </div>
                    </div>
                    {{else}}
                    <div class="card">
                        <div class="card-body">
                            <div class="card-title">
                                <h3 class="text-center title-2">Add a Member</h3>
                            </div>
                            <hr>
                            {{> messages}}
                            <form action="/dashboard/members" method="POST">
                                <div class="form-group">
                                    <label>Name</label>
                                    <input class="au-input au-input--full" type="text" name="name" placeholder="Name"
                                        required>
                                </div>
                                <div class="form-group">
                                    <label>Address</label>
                                    <input class="au-input au-input--full" type="text" name="address"
                                        placeholder="Address" required>
                                </div>
                                <div class="form-group">
                                    <label>Birth Year</label>
                                    <input class="au-input au-input--full" type="number" name="year"
                                        placeholder="Birth Year" required>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label class=" form-control-label">Gender</label>
                                    </div>
                                    <div class="col col-md-9">
                                        <div class="form-check">
                                            <div class="radio">
                                                <label for="radio1" class="form-check-label ">
                                                    <input type="radio" id="radio1" name="gender" value="Male"
                                                        class="form-check-input" checked>Male
                                                </label>
                                            </div>
                                            <div class="radio">
                                                <label for="radio2" class="form-check-label ">
                                                    <input type="radio" id="radio2" name="gender" value="Female"
                                                        class="form-check-input">Female
                                                </label>
                                            </div>
                                            <div class="radio">
                                                <label for="radio3" class="form-check-label ">
                                                    <input type="radio" id="radio3" name="gender" value="Others"
                                                        class="form-check-input">Others
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Contact</label>
                                    <input class="au-input au-input--full" type="number" name="contact"
                                        placeholder="Contact Number" required>
                                </div>
                                <div class="form-group">
                                    <label>Email as Username</label>
                                    <input class="au-input au-input--full" type="email" name="email" placeholder="Email"
                                        required>
                                </div>
                                <button id="payment-button" type="submit"
                                    class="btn btn-lg btn-info btn-block">ADD</button>
                            </form>
                        </div>
                    </div>
                    {{/if}}
                </div>
                <div class="col-md-12">
                    <div class="overview-wrap">
                        <h2 class="title-1 p-2">Members List</h2>
                    </div>
                </div>
                <div class="col-md-12">
                    <!-- DATA TABLE-->
                    <div class="table-responsive m-b-40">
                        <table class="table table-borderless table-data3">
                            <thead>
                                <tr>
                                    <th>S No.</th>
                                    <th>Name</th>
                                    <th>Address</th>
                                    <th>Age</th>
                                    <th>Gender</th>
                                    <th>Contact</th>
                                    <th>Email</th>
                                    <th>Update</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each data.users}}
                                <tr>
                                    <td>{{index}}</td>
                                    <td>{{userName}}</td>
                                    <td>{{userAddress}}</td>
                                    <td>{{userYear}}</td>
                                    <td>{{userGender}}</td>
                                    <td>{{userContact}}</td>
                                    <td>{{userEmail}}</td>
                                    <td>
                                        <a href="/dashboard/members/update/{{id}}">
                                            <button type="button" class="btn btn-primary btn-sm">Update</button>
                                        </a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    <!-- END DATA TABLE-->
                </div>
                {{>footer}}
            </div>
        </div>
    </div>
</div>